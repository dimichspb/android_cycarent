<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_date_choose"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dimichspb.cypruscarrentals.DateChooseActivityFragment"
    tools:showIn="@layout/activity_date_choose">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="7"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/textview_chooseDateStart"
            android:layout_height="30dp"
            android:text="@string/text_choose_date_start"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="4"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:id="@+id/viewText_date_start"
            android:layout_height="wrap_content"
            android:layout_width="120dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/hint_date_start"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <Button
            android:text="..."
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:id="@+id/button_date_start"/>

        <TextView
            android:id="@+id/viewText_time_start"
            android:layout_height="wrap_content"
            android:layout_width="120dp"
            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/hint_time_start"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <Button
            android:text="..."
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:id="@+id/button_time_start"/>


        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_row="2"
            android:layout_columnSpan="4"/>

        <TextView
            android:id="@+id/textview_chooseDateEnd"
            android:layout_height="30dp"
            android:text="@string/text_choose_date_end"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:layout_columnSpan="4" />

        <TextView
            android:id="@+id/viewText_date_end"
            android:layout_height="wrap_content"
            android:layout_width="120dp"
            android:layout_row="5"
            android:layout_column="0"
            android:text="@string/hint_date_end"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <Button
            android:text="..."
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:id="@+id/button_date_end" />

        <TextView
            android:id="@+id/viewText_time_end"
            android:layout_height="wrap_content"
            android:layout_width="120dp"
            android:layout_row="5"
            android:layout_column="2"
            android:text="@string/hint_time_end"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <Button
            android:text="..."
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="3"
            android:id="@+id/button_time_end" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_row="6"
            android:layout_columnSpan="4"/>

    </GridLayout>

</RelativeLayout>
